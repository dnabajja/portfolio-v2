	</div>
    <Header/>
    <main>
        <section class="font-prime container px-[7.729vw] pt-11 md:mx-auto md:max-w-[75rem] md:px-6 md:pt-28">
        <article>
			<div class="flex items-start gap-3 mb-8 md:gap-6 md:mb-16">
				<div>
					<h1 class="text-xl font-light font-prime">{content.title}</h1>
					<p class="py-4 text-3xl font-normal leading-snug tracking-tighter font-prime md:text-5xl">
					{content.description}
					</p>
				</div>
			</div>	
			<div class="mb-9 md:mb-12"><img src={content.cover} alt={content.cover}></div>
			<div class="article">
				<Markdown content={content.astro.source} />
			</div>
        </article>
        </section>
    </main>
	<Footer/>
